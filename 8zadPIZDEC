from itertools import product
s = '01234567'
k = set()
for x in product(s, repeat=5):
    a = ''.join(x) #str
    if a[0] == '0':
        continue
    else:
        p = 1 #произвдеение кол во одинаковых цифр (1*1*3*1) == 3
        m = ''
        for i in set(a):
            if a.count(i) == 3:
                m = i #str повторяющаяся цифра 
            p *= a.count(i)
        if p == 3:#2 часть кода > (нашли какие числа имеют только 3 одинак цифр)
            if a.find(m*3) != -1:
                k.add(a)
print(len(k))
#Сколько существует различных пятизначных чисел, 
#записанных в восьмеричной системе счисления, 
#в записи которых есть только три одинаковые цифры, 
#причём стоящие рядом?

