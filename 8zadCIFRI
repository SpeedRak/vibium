from itertools import permutations
def f(n): # n - str
    if n[0] == '0':
        return False
    else:
        for i in range(1, len(n)):
            if (int(n[i-1]) + int(n[i])) % 2 == 0:
                return False
        return True
s = '0123456789'
k = set()
for x in permutations(s, r = 7):
    a = ''.join(x)
    if f(a) == True:
        k.add(a)
print(len(k))

#Какое количество 7-значных чисел в десятичной системе счисления вы можете составить? 
# Число можно составить согласно данным правилам:
#Все цифры различны;
#Никакие две четные и две нечетные цифры не стоят рядом.